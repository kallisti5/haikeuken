<div class="title">
  <h2>Builders</h2>
  <p>This is a complete listing of build machines leveraged by the Haiku package build system</p>
</div>

<table style="border: 1px solid black; border-spacing: 0px; width: 100%; text-align: left;">
  <thead>
    <tr bgcolor="#ccc" style="font-size: 0.8em;">
      <th>Architecture</th>
      <th>Hostname</th>
      <th>Owner</th>
      <th>Location</th>
      <th>Last seen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @builders.each do |builder| %>
      <tr bgcolor="<%= cycle('#f2f2f2', '#fff') -%>">
        <td><%= builder.architecture['name'] %></td>
        <td><%= builder.hostname %></td>
        <td><%= builder.owner.gsub(/.{2}@.{2}/, '##@##') %></td>
        <td><%= link_to builder.location, "https://maps.google.com/maps?q=#{builder.location}", :target => "_blank" %></td>
        <td><%= builder.lastheard %></td>
        <td><%= link_to 'Show', builder %></td>
        <td><%= link_to 'Edit', edit_builder_path(builder) %></td>
        <td><%= link_to 'Destroy', builder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

