<h1>Listing lints</h1>

<table>
  <thead>
    <tr>
      <th>Clean</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lints.each do |lint| %>
      <tr>
        <td><%= lint.clean %></td>
        <td><%= lint.result %></td>
        <td><%= link_to 'Show', lint %></td>
        <td><%= link_to 'Edit', edit_lint_path(lint) %></td>
        <td><%= link_to 'Destroy', lint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lint', new_lint_path %>
