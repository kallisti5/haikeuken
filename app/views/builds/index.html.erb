<h1>Listing builds</h1>

<table>
  <thead>
    <tr>
      <th>Architecture</th>
      <th>Builder</th>
      <th>Recipe</th>
      <th>Version</th>
      <th>Revision</th>
      <th>Issued</th>
      <th>Completed</th>
      <th>Status</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @builds.each do |build| %>
      <tr>
        <td><%= build.architecture['name'] %></td>
        <td><%= build.builder['hostname'] %></td>
        <td><%= build.recipe['name'] %></td>
        <td><%= build.recipe['version'] %></td>
        <td><%= build.recipe['revision'] %></td>
        <td><%= build.issued %></td>
        <td><%= build.completed %></td>
        <td><%= !build.completed ? "Issued" : "Complete" %></td>
        <td><%= link_to 'Show', build %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Build', new_build_path %>
