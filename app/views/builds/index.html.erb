<p id="notice"><%= notice %></p>

<div class="title">
  <h2>Builds</h2>
  <p>This is a listing of package builds that have been issued.</p>
</div>

<center>
<table style="border: 1px solid black; width: 100%; border-spacing: 0px; margin-bottom: 3px;">
  <thead>
    <tr style="font-size: 1.0em; text-align: left; background-color: #cccccc;">
      <th>Architecture</th>
      <th>Builder</th>
      <th>Recipe</th>
      <th>Version</th>
      <th>Revision</th>
      <th>Issued</th>
      <th>Completed</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @builds.each do |build| %>
      <tr style="font-size: 1.0em; background-color: <%= cycle('#eeeeee', '#ffffff') -%>;">
        <td><%= build.architecture['name'] %></td>
        <td><%= link_to build.builder['hostname'], build.builder %></td>
        <td><%= link_to build.recipe['name'], build.recipe %></td>
        <td><%= build.recipe['version'] %></td>
        <td><%= build.recipe['revision'] %></td>
        <td><%= build.issued %></td>
        <td><%= build.completed ? "build.completed" : "never" %></td>
        <% if (Time.now.to_i - build.issued.to_i) > 21600 and build.completed == nil %>
        <td><%= image_tag "icons/clock--exclamation.png" %> <%= link_to 'Timed out', build %></td>
        <% elsif build.completed %>
        <td><%= image_tag "icons/flag-green.png" %> <%= link_to 'Complete', build %></td>
        <% else %>
        <td><%= image_tag "icons/working-bar.gif" %> <%= link_to 'Building', build %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
