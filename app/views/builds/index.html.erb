<h1>Listing builds</h1>

<table>
  <thead>
    <tr>
      <th>Architecture</th>
      <th>Builder</th>
      <th>Recipe</th>
      <th>Issued</th>
      <th>Completed</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @builds.each do |build| %>
      <tr>
        <td><%= build.architecture_id %></td>
        <td><%= build.builder_id %></td>
        <td><%= build.recipe_id %></td>
        <td><%= build.issued %></td>
        <td><%= build.completed %></td>
        <td><%= build.result %></td>
        <td><%= link_to 'Show', build %></td>
        <td><%= link_to 'Edit', edit_build_path(build) %></td>
        <td><%= link_to 'Destroy', build, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Build', new_build_path %>
